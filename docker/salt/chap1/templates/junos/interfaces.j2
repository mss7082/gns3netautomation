{%- set interfaces = pillar.interfaces -%}

interfaces {
    {% for intf_dict in interfaces %}
    {% for intf, unit_dict in intf_dict.items() %}
    {{intf}} {
        {% for unit, ipaddr_list in unit_dict.items() %}
        unit {{unit}} {
            {% for ipaddr in ipaddr_list %}
                {% if ipaddr["ipv4addr"] is defined %}
            family inet {
                    {% for ipv4 in ipaddr["ipv4addr"] %}
                address {{ipv4}};
                    {% endfor %}
            }
                {% endif %}
                {% if ipaddr["ipv6addr"] is defined %}
            family inet6 {
                    {% for ipv6 in ipaddr["ipv4addr"] %}
                address {{ipv6}};
                    {% endfor %}
            }
                {% endif %}
            {% endfor %}
        }
        {% endfor %}
    }
    {% endfor %}
    {% endfor %}
    lo0 {
        unit 0 {
            family inet {
                address {{pillar.loopbackv4}};
            }
        }
    }
    fxp0 {
        unit 0 {
            family inet {
                address {{pillar.mgmtipv4}};
            }
        }
    }
}